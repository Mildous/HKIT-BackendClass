<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guestBook">

	<select id="getSelectAll" resultType="com.oy.springStudy.guestBook.model.dto.GuestBookDTO">
		select * from guestBook order by no desc
	</select>
	
	<select id="getSelectOne" resultType="com.oy.springStudy.guestBook.model.dto.GuestBookDTO">
		select * from guestBook where no = #{no}
	</select>
	
	<insert id="setInsert">
		insert into guestBook values (seq_memo.nextval, #{writer}, #{content}, sysdate)
	</insert>

	<update id="setUpdate">
		update guestBook set writer = #{writer}, content = #{content} where no = #{no}
	</update>
	
	<delete id="setDelete">
		delete from guestBook where no = #{no}
	</delete>

</mapper>