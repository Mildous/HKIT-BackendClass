<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">
	<select id="getSelectAll" resultType="com.oy.springStudy.member.model.dto.MemberDTO">
		select * from member order by no desc
	</select>
	
	<select id="getSelectOne" resultType="com.oy.springStudy.member.model.dto.MemberDTO">
		select * from member where no = #{no}
	</select>
	
	<insert id="setInsert">
		insert into member values (seq_memo.nextval, #{writer}, #{content}, sysdate)
	</insert>

	<update id="setUpdate">
		update member set writer = #{writer}, content = #{content} where no = #{no}
	</update>
	
	<delete id="setDelete">
		delete from member where no = #{no}
	</delete>
	
	<select id="getLogin" resultType="int">
		select no from member where id = #{id} and passwd = #{passwd}
	</select>
</mapper>

