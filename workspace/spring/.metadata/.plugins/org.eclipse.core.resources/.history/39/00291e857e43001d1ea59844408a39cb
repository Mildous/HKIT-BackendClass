<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="product">
	<select id="getSelectAll" resultType="com.oy.springStudy.product.model.dto.ProductDTO">
		select * from product order by productNo desc
	</select>
	
	<select id="getSelectOne" resultType="com.oy.springStudy.product.model.dto.ProductDTO">
		select * from product where productNo = #{no}
	</select>
	
	<insert id="setInsert">
		insert into product values (seq_product1.nextval, #{productName}, #{productPrice}, #{productDescription}, #{vendorNo}, #{vendorName}, #{attachInfo}, sysdate)
	</insert>

	<update id="setUpdate">
		update product set where productNo = #{productNo}
	</update>
	
	<delete id="setDelete">
		delete from product where productNo = #{productNo}
	</delete>
</mapper>

