<%
	BoardDTO dto = null;
	BoardDAO dao = null;
	int no = 0;
	
	if( fileName.equals("write") || fileName.equals("view") || fileName.equals("edit") || fileName.equals("editProc") || fileName.equals("delete") || fileName.equals("deleteProc")) {
		String no_ = request.getParameter("no");
		if(no_ == null || no_.trim().equals("")) {
			no_ = "0";
		}
		no = Integer.parseInt(no_);
		
		BoardDTO arguDto = new BoardDTO();
		arguDto.setNo(no);
		
		dao = new BoardDAO();
		dto = dao.getSelectOne(arguDto);
		
		if(dto.getNo() <= 0) {
			out.println("<script>alert('존재하지 않는 회원입니다.'); location.href='main.jsp?menuGubun=boardBasic_list';</script>");
