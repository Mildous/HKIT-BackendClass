<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%
	int odd = 0;
	int even = 0;
	
	for(int i=0; i<100; i++) {
		if((i+1) % 2 != 0) {
			odd = odd + (i+1);
		} else if((i+1) % 2 == 0) {
			even = even + (i+1);
		}
	}
	
	out.println("1부터 100까지의 홀수의 합: " + odd + "<br><br>");
	out.println("1부터 100까지의 짝수의 합: " + even );
%>
