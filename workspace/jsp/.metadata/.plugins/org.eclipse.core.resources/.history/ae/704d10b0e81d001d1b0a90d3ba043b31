	<tr>		
		<th>이름</th>
		<td>
			<%
				HaksaMemberDAO memberDao = new HaksaSungjukDAO();
				ArrayList<HaksaMemberDTO> aList = memberDao.getSelectAll();
			%>
			<select name="hakbun">
				<option value="" selected>-- 선택하세요 --</option>
				<%
					for(int i=0; i<aList.size(); i++) {
						HaksaMemberDTO dto = aList.get(i);
						
						String selectedValue = "";
						if(dto.getHakbun == 0) {
							selectedValue = "selected";
						}
				%>
				<option value="<%= dto.getName() %>"><%= dto.getName() %></option>
				<%
					}
				%>
			</select>
		</td>
		<th>시험명</th>
		<th>총점</th>
		<th>평균</th>
