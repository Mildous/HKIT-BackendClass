	</tr>
<% } %>
<%
	int num = list.size();
	for(int i=0; i<list.size(); i++) {
		CartDTO dto = list.get(i);
%>
	<tr>
		<td align="center"><%= dto.getCartNo() %></td>
		<td><%= dto.getMemberNo() %></td>
