<h2>JSON TEST 02</h2>

id : <input type="text" name="id" id="id"><br>
password : <input type="password" name="password" id="password"><br>
name : <input type="text" name="name" id="name"><br>
age : <input type="text" name="age" id="age"><br>
<button type="button" onClick="btnSave();">확인</button>

<hr>

id : <span id="span_id"></span><br>
password : <span id="span_password"></span><br>
name : <span id="span_name"></span><br>
age : <span id="span_age"></span><br>

<script>
$(function(){
	$("#btnSave").click(function(){
		name=$("#name").val();
		kor=$("#kor").val();
		eng=$("#eng").val();
		mat=$("#mat").val();
		sci=$("#sci").val();
		his=$("#his").val();
		param = {
				"name": name,
				"kor": kor,
				"eng": eng,
				"mat": mat,
				"sci": sci,
				"his": his
		}
		$.ajax({
			type: "post",
			data: param,
			url: "exam02Proc.jsp",
			success: function(data) {
				//$("#result").html(data);
				
				json_info = JSON.parse(data);
				$("#span_name").text(json_info.name);
				$("#span_kor").text(json_info.kor);
				$("#span_eng").text(json_info.eng);
				$("#span_mat").text(json_info.mat);
				$("#span_sci").text(json_info.sci);
				$("#span_his").text(json_info.his);
				$("#span_total").text(json_info.total);
				$("#span_avg").text(json_info.avg);
				$("#span_grade").text(json_info.grade);
				
				$("#displayArea").show();
			}
		});
	});
});
</script>	

</body>
</html>