<script>
function validateForm(form) {
	if(form.user_id.value == null || form.user_id.value == "") {
		alert("아이디를 입력하세요");
		return false;
	}
	if(!form.user_pw.value) {
		alert("비밀번호를 입력하세요");
		return false;
	}
}
</script>
<div style="border: 0px solid red; width: 60%">
