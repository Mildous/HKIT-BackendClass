			<button type="button" onClick="login();">로그인</button>
			</form>
		</div>
		
		<script>
		function login() {
			if(confirm('로그인 하시겠습니까?')) {
				document.loginForm.action = 'mainProc.jsp?menuGubun=noLogin_loginProc';
				document.loginForm.method = 'post';
				document.loginForm.submit();
			}
		}
		</script>
